<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href="Content/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>
  @if (@Model.Count == 0)
    {
      <h2>Welcome to your Address Book</h2>
      <h3>Click on the link below to begin adding contacts to your online Address Book!</h3>
    }
    else
    {
      @foreach (var contact in Model)
      {
        <h2><a href="/allcontacts/@contact.GetId()">@contact.GetName()</h2>
      }
    }
    <p><a href="/contact">Add a Contact</a></p>
    <form action="/clear" method="post">
    <button type="submit">Clear All Contacts</button>
    </form>
  </body>
</html>
